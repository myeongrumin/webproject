<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <%- include('menu.html') %>
      <h1>게시글 작성</h1>
      <div class = "container mt-4">
        <form action = "/save" method = "post">
            <div class = "form-group">
            <label>제목</label>
            <input type = "text" name = "title" class = "form-control">
            </div><p></p>
            <div class = "form-group">
            <label>내용</label>
            <textarea name = "content" row = "10" class = "form-control"></textarea>
            </div><p></p>
            <label>작성일</label>
            <input type = "date" name = "someDate" class = "form-control">
            </div><p></p>
            <input type="hidden" name= "content_id" value="content">

            <button type = "submit" class = "btn btn-warning" style = "float:right">저장</button>
        </form>
      </div>

      <div class = "container mt-3">
        <form action = "/photo" method = "post" enctype = "multipart/form-data">
          <input type = "file" name = "picture" accept = "image/*" class = "btn btn-outline-primary"></input>
          <button type = "submit" class = "btn btn-outline-primary">첨부</button>
        </form>
      </div>
    <script src = "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.css"></script>
  </body>
</html>